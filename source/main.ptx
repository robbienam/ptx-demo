    <part xml:id="Book-1">
      <title>Book 1</title>
      
      <!-- Include chapters -->
      <xi:include href="./ch-chapter-title.ptx" />
      <chapter>
        <title>Definitions</title>
        
        <definition xml:id="def-point">
          <statement>
            <p>
              A <term>point</term> is that which has no part.
            </p>
          </statement>
        </definition>
        <definition xml:id="def-line">
          <statement>
            <p>
              A <term>line</term> is breadthless length. 
            </p>
          </statement>
        </definition>
        <definition xml:id="def-line-extremeties">
          <statement>
            <p>
              The extremeties of lines are points. 
            </p>
          </statement>
        </definition>
        <proposition xml:id="prop-Euler-identity">
          <title>Euler's Identity</title>
          <statement>
            <p>
              Euler's Identity relates complex exponentials and trigonmetric functions:
              <me>e^{i\pi}+1=0.</me>
            </p>
          </statement>
        </proposition>
          
       
      </chapter>
    </part>
